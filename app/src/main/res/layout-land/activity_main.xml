<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#1C1C1C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expressionView"
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:text="(1+1)*3+4/5"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="655dp"
            android:layout_height="wrap_content"
            android:text="=2"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <Button
                android:id="@+id/buttonLeftBrack"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="("
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonRightBrack"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text=")"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonStage"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="x!"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="7"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="8"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="9"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonC"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="C"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <Button android:layout_weight="1"
                android:id="@+id/buttonPi"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="π"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonExpon"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="^"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonSqrt"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="√"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/button4"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="4"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/button5"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="5"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/button6"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="6"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonAdd"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="+"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonSub"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="-"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <Button android:layout_weight="1"
                android:id="@+id/buttonSin"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="sin"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonCos"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="cos"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonPer"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="%"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/button1"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="1"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/button2"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="2"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/button3"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="3"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonMul"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="*"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonDiv"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="/"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <Button android:layout_weight="1"
                android:id="@+id/buttonCot"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="cot"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonTan"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="tan"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonAns"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_black"
                android:text="ANS"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="2"
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="0"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="1"
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_sivil"
                android:text="."
                android:textColor="#FFFFFF" />

            <Button android:layout_weight="2"
                android:id="@+id/buttonEqual"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_orange"
                android:text="="
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>